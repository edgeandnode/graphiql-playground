{
  "name": "@edgeandnode/graphiql-playground",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.es.js",
    "node": "./dist/index.cjs.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edgeandnode/graphiql-playground.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --declaration --emitDeclarationOnly",
    "build:demo": "cross-env BUILD_DEMO=1 vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/** --ext .ts --ext .tsx",
    "lint:fix": "eslint src/** --ext .ts --ext .tsx --fix",
    "format": "prettier --write",
    "ci": "pnpm typecheck && pnpm lint"
  },
  "dependencies": {
    "@graphiql/plugin-explorer": "^0.1.0",
    "@graphiql/react": "^0.11.1",
    "@graphiql/toolkit": "^0.7.0"
  },
  "devDependencies": {
    "@edgeandnode/components": "^23.0.7",
    "@edgeandnode/eslint-config": "^1.0.3",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/rollup-plugin-auto-external": "^2.0.2",
    "@vitejs/plugin-react": "^2.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "postcss-nesting": "^10.1.10",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "theme-ui": "^0.14.7",
    "typescript": "^4.6.4",
    "vite": "^3.0.7"
  },
  "peerDependencies": {
    "@edgeandnode/components": "^23",
    "react": ">=16",
    "react-dom": ">=16",
    "theme-ui": ">=0.14"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "graphql"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
